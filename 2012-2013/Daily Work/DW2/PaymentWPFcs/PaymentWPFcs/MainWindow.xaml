<Window x:Class="PaymentWPFcs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer" Height="350" Width="525" Name="frmCustomer" BorderThickness="4" Loaded="MainWindow_Loaded">
    <Grid>
        <Label Content="Customer name:" Height="28" HorizontalAlignment="Left" Margin="19,24,0,0" Name="label1" VerticalAlignment="Top" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="179,24,0,0" Name="cboNames" VerticalAlignment="Top" Width="284" />
        <Label Content="Payment method:" Height="28" HorizontalAlignment="Left" Margin="19,77,0,0" Name="label2" VerticalAlignment="Top" />
        <Label Height="99" HorizontalAlignment="Left" Margin="28,114,0,0" Name="lblPayment" VerticalAlignment="Top" Width="263" BorderThickness="4" BorderBrush="Black" />
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="280,258,0,0" Name="btnSave" VerticalAlignment="Top" Width="75" Click="btnSave_Click" />
        <Button Content="Exit" Height="23" HorizontalAlignment="Left" Margin="394,258,0,0" Name="btnExit" VerticalAlignment="Top" Width="75" Click="btnExit_Click" />
        <Button Content="Select Payment" Height="23" HorizontalAlignment="Left" Margin="323,114,0,0" Name="btnSelectPayment" VerticalAlignment="Top" Width="108" Click="btnSelectPayment_Click" />
    </Grid>
</Window>
